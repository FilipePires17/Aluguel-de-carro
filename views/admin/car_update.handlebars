{{#data}}
<form name="car_modify" action="/car_update/{{CodCar}}" method="POST">
    <label>Modelo</label>
    <input type="text" name="modelo" id="modelo" placeholder="Modelo"/ value="{{modelo}}"><br/>
    <label>Ano</label>
    <input type="text" name="ano" id="ano" placeholder="..." value="{{ano}}"/><br/>
    <label>Cor</label>
    <input type="text" name="cor" id="cor" placeholder="Cor" value="{{Cor}}"/><br/>
    <label>Placa</label>
    <input type="text" name="placa" id="placa" placeholder="LLLNNNN" value="{{Placa}}"/><br/>
    <label>Tipo</label>
    <select name="tipo" id="tipo" onchange="alterar_caracteristica()">
        <option value="esportivo">Esportivo</option>
        <option value="seda">Sedã</option>
    </select>
    <label id="caracteristica">Velocidade</label>
    <input type="text" name="caracteristica" id="caracteristica"/><br/>
    <label>Diária</label>
    <input type="text" name="diaria" id="diaria" placeholder="R$" value="{{diaria}}"/><br/>
    <input type="submit" name="car_update" id="car_update" value="Salvar"/>
</form>
{{/data}}
<a href="/admin-carro">Cancelar</a>